<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:src="@drawable/guanbi_bg"
        android:layout_gravity="right"
        android:layout_marginTop="10px"
        android:layout_marginRight="10px"
        android:textSize="18px"
        android:id="@+id/guanbi"
        android:textColor="@color/write"
        android:text="关闭"
        android:background="@drawable/jiaohu5"
        android:layout_width="80px"
        android:layout_height="40px" />

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="600px"
        android:layout_height="500px">

        <TextView
            android:textColor="@color/blake"
            android:textSize="30px"
            android:layout_marginTop="20px"
            android:text="未检测到相关信息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:textColor="@color/blake"
            android:textSize="24px"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/zhongkong"
            android:layout_marginLeft="80px"
            android:layout_marginTop="20px"
            android:id="@+id/editview"
            android:layout_marginRight="80px"
            android:paddingLeft="20px"
            android:paddingRight="10px"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/sousuo"
            android:hint="姓名/电话"
            android:textColorHint="@color/textcolor2"
            android:layout_width="match_parent"
            android:layout_height="70px" />


        <ListView
            android:layout_marginBottom="14px"
            android:layout_marginLeft="80px"
            android:layout_marginRight="80px"
            android:layout_marginTop="2px"
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



        </ListView>





    </LinearLayout>


    <Button
        android:layout_width="110px"
        android:textSize="20px"
        android:text="报 名"
        android:layout_marginBottom="16px"
        android:id="@+id/baoming"
        android:textColor="@color/write"
        android:background="@drawable/jiaohu3"
        android:layout_height="50px" />
</LinearLayout>