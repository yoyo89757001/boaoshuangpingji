<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="280dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title2"
            android:text="设置主机URL(必填)"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="80dp" />

        <View
            android:background="@color/colorBar_bg"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"/>


        <EditText
            android:textColor="@color/textcolor"
            android:textSize="14sp"
            android:background="@null"
            android:gravity="center"
            android:id="@+id/xiangce"
            android:layout_width="match_parent"
            android:layout_height="60dp" />
        <View
            android:background="@color/colorBar_bg"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"/>

      </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="280dp"
        android:layout_height="wrap_content">

        <TextView
            android:text="设置展会id(必填)"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="80dp" />

        <View
            android:background="@color/colorBar_bg"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"/>


        <EditText
            android:textColor="@color/textcolor"
            android:textSize="14sp"
            android:background="@null"
            android:gravity="center"
            android:id="@+id/xiangce3"
            android:layout_width="match_parent"
            android:layout_height="60dp" />
        <View
            android:background="@color/colorBar_bg"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"/>

    </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="280dp"
            android:layout_height="60dp">

            <Button
                android:layout_width="0dp"
                android:textColor="@color/colorBar_bg"
                android:layout_weight="1"
                android:text="确认"
                android:id="@+id/queren"
                android:textSize="16sp"
                android:background="@null"
                android:layout_height="50dp" />

            <View
                android:layout_width="0.6dp"
                android:background="@color/tabtextcolo"
                android:layout_height="match_parent"/>
            <Button
                android:layout_width="0dp"
                android:background="@null"
                android:layout_weight="1"
                android:textSize="16sp"
                android:id="@+id/quxiao"
                android:text="取消"
                android:textColor="@color/colorBar_bg"
                android:layout_height="50dp" />

        </LinearLayout>



</LinearLayout>