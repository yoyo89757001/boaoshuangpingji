<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg1"
    android:layout_height="match_parent">

    <TextView
        android:background="@drawable/jiaohu3"
        android:id="@+id/baoming"
        android:textSize="20px"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="会议报名"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200px"
        android:textColor="@color/write"
        android:layout_width="130px"
        android:layout_height="60px" />


    <RelativeLayout
        android:id="@+id/root_ll"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/neirong_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </View>

            <LinearLayout
                android:layout_weight="1.4"
                android:layout_width="0dp"
                android:gravity="center_horizontal"
                android:layout_marginTop="100px"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/touxiang"
                    android:layout_marginTop="20px"
                    android:layout_width="200px"
                    android:layout_height="200px" />

                <TextView
                    android:id="@+id/name"
                    android:textSize="20px"
                    android:gravity="center"
                    android:textColor="@color/write"
                    android:layout_marginTop="18px"
                    android:layout_width="200px"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/jieshao"
                    android:textSize="18px"
                    android:textColor="@color/write"
                    android:layout_marginTop="4px"
                    android:layout_width="200px"
                    android:layout_height="wrap_content" />


                <Button
                    android:layout_width="100px"
                    android:background="@drawable/jiaohu3"
                    android:id="@+id/chongpai"
                    android:text="重 拍"
                    android:visibility="gone"
                    android:layout_marginTop="20px"
                    android:textColor="@color/write"
                    android:textSize="18px"
                    android:layout_height="42px" />


            </LinearLayout>


            <LinearLayout
                android:layout_weight="4"
                android:layout_width="0dp"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                  <LinearLayout
                      android:orientation="horizontal"
                      android:layout_marginTop="-40px"
                      android:background="@drawable/zhongkong"
                      android:layout_marginLeft="30px"
                      android:layout_marginRight="30px"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">
                      <TextView
                          android:textSize="20px"
                          android:textColor="@color/write"
                          android:text="姓名:"
                          android:layout_marginLeft="6px"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content" />

                      <EditText
                          android:id="@+id/a1"
                          android:minWidth="200px"
                          android:minHeight="40px"
                          android:textColor="@color/write"
                          android:textSize="18px"
                          android:layout_marginLeft="10px"
                          android:background="@null"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content" />
                  </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="30px"
                        android:orientation="horizontal"
                        android:background="@drawable/zhongkong"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="30px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="20px"
                            android:textColor="@color/write"
                            android:text="省份/城市:"
                            android:layout_marginLeft="6px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:id="@+id/a2"
                            android:minHeight="40px"
                            android:textColor="@color/write"
                            android:textSize="18px"
                            android:layout_marginLeft="10px"
                            android:background="@null"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="30px"
                        android:orientation="horizontal"
                        android:background="@drawable/zhongkong"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="30px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="20px"
                            android:textColor="@color/write"
                            android:text="手机号码:"
                            android:layout_marginLeft="6px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:id="@+id/a3"
                            android:minHeight="40px"
                            android:textColor="@color/write"
                            android:textSize="18px"
                            android:layout_marginLeft="10px"
                            android:background="@null"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="30px"
                        android:orientation="horizontal"
                        android:background="@drawable/zhongkong"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="30px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="20px"
                            android:textColor="@color/write"
                            android:text="公司名称:"
                            android:layout_marginLeft="6px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:id="@+id/a4"
                            android:minHeight="40px"
                            android:textColor="@color/write"
                            android:textSize="18px"
                            android:layout_marginLeft="10px"
                            android:background="@null"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="30px"
                        android:orientation="horizontal"
                        android:background="@drawable/zhongkong"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="30px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="20px"
                            android:textColor="@color/write"
                            android:text="联系人:"
                            android:layout_marginLeft="6px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:id="@+id/a5"
                            android:minHeight="40px"
                            android:textColor="@color/write"
                            android:textSize="18px"
                            android:layout_marginLeft="10px"
                            android:background="@null"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="30px"
                        android:orientation="horizontal"
                        android:background="@drawable/zhongkong"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="30px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="20px"
                            android:textColor="@color/write"
                            android:text="房间号:"
                            android:layout_marginLeft="6px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:id="@+id/a6"
                            android:minHeight="40px"
                            android:textColor="@color/write"
                            android:textSize="18px"
                            android:layout_marginLeft="10px"
                            android:background="@null"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_marginTop="-40px"
                        android:orientation="horizontal"
                        android:background="@drawable/zhongkong"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="30px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="20px"
                            android:textColor="@color/write"
                            android:text="性别:"
                            android:layout_marginLeft="6px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:id="@+id/a7"
                            android:minHeight="40px"
                            android:textColor="@color/write"
                            android:textSize="18px"
                            android:layout_marginLeft="10px"
                            android:background="@null"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="30px"
                        android:orientation="horizontal"
                        android:background="@drawable/zhongkong"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="30px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="20px"
                            android:textColor="@color/write"
                            android:text="职位:"
                            android:layout_marginLeft="6px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:id="@+id/a8"
                            android:minWidth="200px"
                            android:minHeight="40px"
                            android:textColor="@color/write"
                            android:textSize="18px"
                            android:layout_marginLeft="10px"
                            android:background="@null"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="30px"
                        android:orientation="horizontal"
                        android:background="@drawable/zhongkong"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="30px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="20px"
                            android:textColor="@color/write"
                            android:text="邮箱:"
                            android:layout_marginLeft="6px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:id="@+id/a9"
                            android:minHeight="40px"
                            android:textColor="@color/write"
                            android:textSize="18px"
                            android:layout_marginLeft="10px"
                            android:background="@null"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="30px"
                        android:orientation="horizontal"
                        android:background="@drawable/zhongkong"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="30px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="20px"
                            android:textColor="@color/write"
                            android:text="公司地址:"
                            android:layout_marginLeft="6px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:id="@+id/a10"
                            android:minHeight="40px"
                            android:textColor="@color/write"
                            android:textSize="18px"
                            android:layout_marginLeft="10px"
                            android:background="@null"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="30px"
                        android:orientation="horizontal"
                        android:background="@drawable/zhongkong"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="30px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="20px"
                            android:textColor="@color/write"
                            android:text="联系方式:"
                            android:layout_marginLeft="6px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:id="@+id/a11"
                            android:minHeight="40px"
                            android:textColor="@color/write"
                            android:textSize="18px"
                            android:layout_marginLeft="10px"
                            android:background="@null"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="30px"
                        android:orientation="horizontal"
                        android:background="@drawable/zhongkong"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="30px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="20px"
                            android:textColor="@color/write"
                            android:text="行业类型:"
                            android:layout_marginLeft="6px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:id="@+id/a12"
                            android:minHeight="40px"
                            android:textColor="@color/write"
                            android:textSize="18px"
                            android:layout_marginLeft="10px"
                            android:background="@null"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </View>

        </LinearLayout>

        <Button
            android:layout_width="130px"
            android:background="@drawable/jiaohu3"
            android:id="@+id/baocun"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="750px"
            android:layout_marginBottom="96px"
            android:textColor="@color/write"
            android:textSize="20px"
            android:layout_height="54px" />


        <Button
            android:layout_width="100px"
            android:background="@drawable/jiaohu3"
            android:id="@+id/guanbi"
            android:text="关 闭"
            android:layout_marginRight="20px"
            android:layout_marginTop="20px"
            android:layout_alignParentRight="true"
            android:textColor="@color/write"
            android:textSize="18px"
            android:layout_height="42px" />


    </RelativeLayout>


    <TextView
        android:id="@+id/shezhi"
        android:layout_width="100px"
        android:layout_height="60px" />
</RelativeLayout>
