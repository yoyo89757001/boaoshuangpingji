<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:layout_width="match_parent"
        android:id="@+id/fff"
        android:layout_height="match_parent" />

    <TextView
        android:background="@drawable/jiaohu3"
        android:text="切换摄像头"
        android:id="@+id/qiehuan"
        android:textSize="12sp"
        android:onClick="onViewClicked"
        android:textColor="@color/write"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:background="@drawable/jiaohu3"
        android:layout_marginLeft="50dp"
        android:text="拍 照"
        android:id="@+id/paizhao"
        android:textSize="16sp"
        android:onClick="pai"
        android:textColor="@color/write"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="44dp" />

    <Button
        android:background="@drawable/jiaohu3"
        android:layout_marginLeft="50dp"
        android:text="保 存"
        android:visibility="gone"
        android:id="@+id/baocu"
        android:textSize="16sp"
        android:textColor="@color/write"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="44dp" />

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/yulan"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="100dp"
        android:layout_height="120dp" />

    <RelativeLayout
        android:id="@+id/jiazai_rl"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="240dp">

        <ProgressBar
            android:layout_width="60dp"
            android:padding="10dp"
            android:layout_centerInParent="true"
            android:layout_height="60dp"
            style="@style/Base.Widget.AppCompat.ProgressBar"
            android:id="@+id/progressBar" />

        <TextView
            android:textColor="@color/write"
            android:layout_marginTop="10dp"
            android:background="@color/lanse"
            android:text="分析图片中,请稍后..."
            android:textSize="16sp"
            android:gravity="center"
            android:id="@+id/a1"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progressBar"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <com.guo.android_extend.widget.CameraSurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="1dp"
        android:layout_height="1dp"/>

    <com.guo.android_extend.widget.CameraGLSurfaceView
        android:id="@+id/glsurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"/>

</RelativeLayout>
